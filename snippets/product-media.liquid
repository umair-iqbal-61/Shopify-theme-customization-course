{% case media.media_type %}
  {% when 'image' %}
    <img
      class="w-full h-full object-cover"
      src="{{ media | image_url: width: 800 }}"
      alt="{{ media.preview_image.alt }}"
      width="400"
      height="{{ 400 | divided_by: article.image.aspect_ratio | round }}"
    >

  {% when 'external_video' %}
    {{ media | external_video_tag: class: 'w-full h-full object-cover' }}

  {% when 'video' %}
    {{ media | video_tag: controls: true, class: 'w-full h-full object-cover' }}

  {% when 'model' %}
    {{ media | model_viewer_tag }}

  {% else %}
    {{ media | media_tag }}
{% endcase %}
